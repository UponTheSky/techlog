{
  "name": "techlog",
  "version": "0.0.1",
  "description": "techlog: my personal blog with techical articles",
  "main": "./build/index.js",
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "format": "prettier --write ./src",
    "dev": "NODE_ENV=development ts-node-dev ./src/server.ts",
    "test": "NODE_ENV=test jest --config ./.jest.config.js --runInBand ./src/tests",
    "build": "NODE_ENV=production tsc --verbose",
    "start": "yarn build && node ./dist/server.js",
    "prepare": "husky install"
  },
  "repository": "https://github.com/UponTheSky/techlog.git",
  "author": "Sung Ju Yea <sailing.to.orbis@gmail.com>",
  "license": "None",
  "private": true,
  "engines": {
    "node": ">= 14.18.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.6.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown "
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  }
}
